{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "types": ["node"],
    "lib": ["dom", "es2015", "es2016"],
    "target": "es2016",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs"
  },
  "include": ["src"]
}
